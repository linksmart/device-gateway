{
  "id": "example-dgw",
  "description": "Example LinkSmartÂ® Device Gateway",
  "publicEndpoint": "http://fqdn-of-the-host:8080",
  "staticDir": "./static",
  "catalog": [
    {
      "discover": false,
      "endpoint": "http://remotehost:8081/rc"
    }
  ],
  "http": {
    "bindAddr": "0.0.0.0",
    "bindPort": 8080
  },
  "protocols": {
    "REST": {
      "location": "/rest"
    },
    "MQTT": {
      "discover": false,
      "url": "tcp://localhost:1883",
      "prefix": "example-dgw"
    }
  },
  "auth": {
    "enabled": true,
    "provider": "provider-name",
    "providerURL": "https://provider-url",
    "serviceID": "sampleDGW",
    "basicEnabled": false,
    "authorization": {
      "rules": [
        {
          "resources": ["/rc","/rest","/dashboard"],
          "methods": ["GET"],
          "users": [],
          "groups": ["fir"]
        }
      ]
    }
  },
  "serviceCatalog": {
    "endpoint": "http://localhost:8082",
    "ttl": 120
  }
}